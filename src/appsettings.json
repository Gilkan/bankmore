{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "Jwt": {
    "Issuer": "BankMore",
    "Audience": "BankMore.Api",
    "SecretKey": "THIS_IS_A_MINIMUM_32_CHAR_SECRET_KEY",
    "ExpirationMinutes": 60
  },

  "Tarifa": {
